{
  "name": "sql-string-search",
  "version": "1.0.0",
  "description": "A CLI that search SQL-like string from source codes.",
  "keywords": [
    "sql",
    "search"
  ],
  "homepage": "https://github.com/azu/sql-string-search",
  "bugs": {
    "url": "https://github.com/azu/sql-string-search/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/sql-string-search.git"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/sql-string-search.js",
  "types": "lib/sql-string-search.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "clean": "rimraf lib/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.12.31",
    "cross-env": "^7.0.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "mocha": "^7.1.1",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.1",
    "ts-node-test-register": "^8.0.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/acorn": "^4.0.5",
    "@types/estree": "^0.0.44",
    "acorn": "^7.1.1",
    "estree-walker": "^2.0.1",
    "globby": "^11.0.0",
    "meow": "^6.1.0"
  }
}
